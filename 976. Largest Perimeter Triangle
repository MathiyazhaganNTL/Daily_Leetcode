class Solution(object):
    def largestPerimeter(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        n = len(nums)
        nums.sort()  # sort ascending
        result = 0
        
        # fix loop ranges
        for i in range(n - 2):            # i from 0 to n-3
            for j in range(i + 1, n - 1): # j from i+1 to n-2
                for k in range(j + 1, n): # k from j+1 to n-1
                    if nums[i] + nums[j] > nums[k]:  # triangle condition
                        perimeter = nums[i] + nums[j] + nums[k]
                        result = max(result, perimeter)
        
        return result
