class Solution(object):
    def reverseOnlyLetters(self, s):
        """
        :type s: str
        :rtype: str
        """
        letter=[]
        for i in range(len(s)) :
            if s[i].isalpha() :
                letter.append(s[i])
        letter=letter[::-1]
        cnt=0
        reverse=""
        for i in range(len(s)) :
            if s[i].isalpha() :
                reverse+=letter[cnt]
                cnt+=1
            else :
                reverse+=s[i]
        return str(reverse)
            
        
