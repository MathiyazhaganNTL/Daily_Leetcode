class Solution(object):
    def countPermutations(self, complexity):
        """
        :type complexity: List[int]
        :rtype: int
        """
        firstEle = complexity[0]
        n = len(complexity)
        MOD = 1000000007
        Permutation = 1

        for i in range(1, n):
            if (firstEle >= complexity[i]):
                return 0

            Permutation = (Permutation * i) % MOD
        
        return Permutation
