class Solution(object):
    def reverseStr(self, s, k):
        i = k
        j = 0
        new = ""
        con = True
        while i <= len(s):
            if con:
                sub = s[j:i]
                new += sub[::-1]   
                i += k
                j += k
                con = False
            else:
                sub = s[j:i]
                new += sub         
                i += k
                j += k
                con = True

        if j < len(s):
            if con:   
                new += s[j:][::-1]
            else:    
                new += s[j:]

        return new
