class Solution(object):
    def largeGroupPositions(self, s):
        """
        :type s: str
        :rtype: List[List[int]]
        """
        result = []
        count = 1

        for i in range(len(s) - 1):
            if s[i + 1] == s[i]:
                count += 1
            else:
                if count >= 3:  
                    start = i - count + 1
                    end = i
                    result.append([start, end])
                count = 1

        if count >= 3:
            start = len(s) - count
            end = len(s) - 1
            result.append([start, end])

        return result
        
