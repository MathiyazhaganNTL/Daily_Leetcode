class Solution:
    def minimumDifference(self, nums: List[int], k: int) -> int:
        if len(nums)==1:
            if k==1:
                return 0
        nums.sort()
        count=0
        mx=0
        left=0
        mn=float("inf")
        ans=float("inf")
        for right in range(len(nums)):
            mx=max(mx,nums[right])
            mn=min(mn,nums[right])
            count+=1
            while count>k:
                count-=1
                left+=1
                mn=nums[left]
            if count==k:
                ans=min(ans,mx-mn)
        return ans
