import java.util.Arrays;

class Solution {
    public long maximumMedianSum(int[] nums) {
        Arrays.sort(nums);
        int n = nums.length;
        int groups = n / 3;
        long sum = 0;
        
        for (int i = n - 2; groups > 0; i -= 2) {
            sum += nums[i];
            groups--;
        }
        return sum;
    }
}
