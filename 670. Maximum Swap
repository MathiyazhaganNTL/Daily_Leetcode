class Solution(object):
    def maximumSwap(self, num):
        """
        :type num: int
        :rtype: int
        """
        new = [int(i) for i in str(num)]
        result = num   # ✅ start with original number

        if len(new) == 1:
            return num

        for i in range(len(new)):
            for j in range(i+1, len(new)):
                temp = new[:]        
                temp[i], temp[j] = temp[j], temp[i]  
                swapped_str = "".join(str(x) for x in temp)
                swapped_num = int(swapped_str)       
                result = max(result, swapped_num)  # ✅ compare with original too

        return result
