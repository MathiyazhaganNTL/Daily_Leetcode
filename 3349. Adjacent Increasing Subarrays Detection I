class Solution(object):
    def hasIncreasingSubarrays(self, nums, k):
        """
        :type nums: List[int]
        :type k: int
        :rtype: bool
        """
        n = len(nums)
        count = 1

        for i in range(1, n):
            if nums[i] == nums[i - 1] + 1:
                count += 1
            else:
                count = 1  # reset when sequence breaks

            # If we found an increasing subarray of length k or more
            if count >= k:
                return True

        return False
