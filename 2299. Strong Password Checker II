class Solution(object):
    def strongPasswordCheckerII(self, password):
        """
        :type password: str
        :rtype: bool
        """
        special_chars = "!@#$%^&*()-+"
        if len(password) < 8:
            return False

        low = upper = digit = has_special = False

        for i, item in enumerate(password):
            if i > 0 and password[i] == password[i-1]:
                return False
            if item.islower():
                low = True
            elif item.isupper():
                upper = True
            elif item.isdigit():
                digit = True
            elif item in special_chars:
                has_special = True

        return low and upper and digit and has_special
