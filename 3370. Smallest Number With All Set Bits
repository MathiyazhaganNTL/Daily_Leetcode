class Solution(object):
    def smallestNumber(self, n):
        """
        :type n: int
        :rtype: int
        """
        zero="0"
        cnt=n
        while True :
            binary = bin(cnt)[2:] 
            st=str(binary)
            if zero not in st :
                return cnt
            else :
                cnt+=1
                st=""
            
        
        
