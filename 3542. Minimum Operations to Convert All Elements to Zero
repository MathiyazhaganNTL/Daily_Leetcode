class Solution:
    def minOperations(self, nums):
        n = len(nums)
        stack = [0] * (n + 1)
        top = 0
        ans = 0
        for num in nums:
            while stack[top] > num:
                top -= 1
                ans += 1
            
            if stack[top] != num:
                top += 1
                stack[top] = num
        
        return ans + top
