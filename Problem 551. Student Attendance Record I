class Solution(object):
    def checkRecord(self, s):
        """
        :type s: str
        :rtype: bool
        """
        a=0
        l=0
        p=0
        lmax=0
        for i in range(0,len(s)) :
            if s[i] =="A" :
                a+=1
                l=0
            elif s[i]=="L" :
                l+=1
                lmax=max(lmax,l)
            else :
                p+=1
                l=0
        if a<2 and lmax<3 :
            return True
        else :
            return False
