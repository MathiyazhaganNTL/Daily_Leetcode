class Solution(object):
    def longestSubarray(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        zerocnt = 0
        result = 0
        val = 0
        left = 0

        for right in range(len(nums)):
            if nums[right] == 0:
                zerocnt += 1

            # shrink window if more than 1 zero
            while zerocnt > 1:
                if nums[left] == 0:
                    zerocnt -= 1
                left += 1

            # update longest length (delete one element â†’ subtract 1)
            result = max(result, right - left)

        return result
