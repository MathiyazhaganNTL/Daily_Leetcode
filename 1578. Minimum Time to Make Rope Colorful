class Solution:
    def minCost(self, colors, neededTime):
        n=len(neededTime)
        timeReq=0
        for i in range(1,n):
            if colors[i]==colors[i-1]:
                timeReq+=min(neededTime[i],neededTime[i-1])
                neededTime[i]=max(neededTime[i],neededTime[i-1])
        return timeReq
